@model BillingSystem.Models.Service

<h1>Edit Service</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="ServiceId" />
    <div class="form-group">
        <label asp-for="ServiceType"></label>
        <select asp-for="ServiceType" class="form-control">
             @foreach (var type in Enum.GetValues(typeof(ServiceType)).Cast<ServiceType>())
            {
                <option value="@type" >@type</option>
            }
        </select>
        <span asp-validation-for="ServiceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

