@model BillingSystem.Models.Service

<h1>Create Service</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ServiceType"></label>
        <select asp-for="ServiceType" class="form-control">
            <option value="">Select Service Type</option>
            @foreach (var type in Enum.GetValues(typeof(ServiceType)).Cast<ServiceType>())
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="ServiceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
