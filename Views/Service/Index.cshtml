@model IEnumerable<BillingSystem.Models.Service>

<h1>Services</h1>
<a asp-action="Create" class="btn btn-primary">Create New Service</a>
<table class="table">
    <thead>
        <tr>
            <th>Service Type</th>
            <th>Rate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceType</td>
                <td>@service.Rate.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.ServiceId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@service.ServiceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
