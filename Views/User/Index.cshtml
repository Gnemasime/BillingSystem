@model IEnumerable<BillingSystem.Models.User>

<h1 style="text-align: center; color: #4A90E2;">Admin Dashboard</h1>

<div class="dashboard" style="text-align: center;">
    <h2 style="color: #FF5733;">Actions</h2>
    <div class="action-buttons">
        <a class="btn rainbow-btn" asp-action="Create">Create User</a>
        <a class="btn rainbow-btn" asp-action="Detail">View Users</a>
    </div>
</div>


<h3>Current Users</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    .dashboard {
        background-color: #DFFF00;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .rainbow-btn {
        background: linear-gradient(90deg, #FF5733, #FFC300, #DAF7A6, #FFC300, #FF5733);
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        color: white;
        font-weight: bold;
        transition: transform 0.3s;
    }

    .rainbow-btn:hover {
        transform: scale(1.1);
    }

    .table {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 15px;
        text-align: center;
    }
</style>