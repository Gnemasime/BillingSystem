@model IEnumerable<BillingSystem.Models.User>

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New User
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Cell Phone</th>
            <th>ID Number</th>
            <th>Date of Birth</th>
            <th>State</th>
            <th>City</th>
            <th>Postal Code</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.CellPhone</td>
                <td>@user.IdNumber</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.State</td>
                <td>@user.City</td>
                <td>@user.PostalCode</td>
                <td>@user.Type</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a> 
                    <a asp-action="Delete" asp-route-id="@user.Id" title="Delete">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
