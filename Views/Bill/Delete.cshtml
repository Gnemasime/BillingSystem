@model BillingSystem.Models.Bill

<h1>Delete Bill</h1>
<h3>Are you sure you want to delete this bill?</h3>
<div>
    <h4>Service: @Model.Service.ServiceType</h4>
    <div>User: @Model.User.FirstName @Model.User.LastName</div>
    <div>Tariff: @Model.Tariff.TariffType</div>
    <div>Amount Due: @Model.AmountDue.ToString("C")</div>
    <div>Usage: @Model.Usage</div>
    <div>Due Date: @Model.DueDate.ToShortDateString()</div>
    <div>Status: @Model.Status</div>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="BillId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
